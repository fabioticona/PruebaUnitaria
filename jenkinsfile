pipeline {
    agent any
    tools {
        nodejs "node"
    }
    stages {
        stage('copiando repositorio'){
            steps{
                git branch: 'master', credentialsId: '0d44f9d0-3885-4685-93d0-d1ab75d730d5', url: 'https://github.com/fabioticona/PruebaUnitaria'
            }
        }
        stage('install dependencias'){
            steps{
                bat 'npm install'
            }
        }
        stage('build'){
            steps{
                bat 'npm audit fix'
            }
        }
        stage('test'){
            steps{
                bat 'npm test'
            }
        }
        stage('deploy'){
            steps{
                bat 'npm install'
            }
        }
    }
}
